@inherits LayoutComponentBase

<div class="page">
    <img src="img/login-bg.jpg" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; opacity: 0.15; z-index: -1;"/>

    <div class="sidebar p-3">
        <NavMenu/>
    </div>

    <main class="px-5 py-3">
        @Body
    </main>
    <BlazoredToasts />
</div>

<div class="d-none" id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>